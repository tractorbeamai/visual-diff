{
  // Minimal wrangler config for vitest-pool-workers.
  // Containers/Browser Rendering can't be emulated by miniflare,
  // so we only include bindings that miniflare supports (R2, Queues).
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "visual-diff",
  "main": "src/worker/index.ts",
  "compatibility_date": "2025-05-06",
  "compatibility_flags": ["nodejs_compat"],
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "visual-diff-db",
    },
  ],
  "r2_buckets": [
    {
      "binding": "SCREENSHOTS",
      "bucket_name": "visual-diff-screenshots",
    },
    {
      "binding": "LOGS",
      "bucket_name": "visual-diff-logs",
    },
  ],
  "queues": {
    "producers": [
      { "binding": "SCREENSHOT_QUEUE", "queue": "visual-diff-jobs" },
    ],
    "consumers": [{ "queue": "visual-diff-jobs", "max_retries": 2 }],
  },
  // Secrets are provided via .dev.vars for test environment
  "vars": {},
}
